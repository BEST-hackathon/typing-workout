{
  "name": "typing-workout",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "next lint"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "next": "12.0.3",
    "random-words": "^1.1.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-timer-hook": "^3.0.5",
    "react-use": "^17.3.1",
    "recharts": "^2.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "devDependencies": {
    "@types/node": "16.11.7",
    "@types/random-words": "^1.1.2",
    "@types/react": "17.0.34",
    "eslint": "7",
    "eslint-config-next": "12.0.3",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.2",
    "prettier": "^2.4.1",
    "typescript": "4.4.4"
  }
}
